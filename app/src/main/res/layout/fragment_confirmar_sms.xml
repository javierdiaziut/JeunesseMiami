<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appcontactos.javierdiaz.jeunessemiami.fragments.ConfirmarSmsFragment">

    <TextView
        android:id="@+id/textview_num_selected"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/text_view_confirmacion_style"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/edittext_sms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textview_num_selected"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edit_text_style"
        android:textSize="18sp"
        android:gravity="start"
        android:padding="15dp"
        android:hint="Escriba su mensaje"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/btn_send_sms"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="@string/enviar_sms"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
